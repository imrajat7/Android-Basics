<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:textSize">@dimen/question_size</item>
        <item name="android:textColor">@color/blackColor</item>
    </style>

    <style name="AnswerStyle">
        <item name="android:textSize">@dimen/answer_size</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginTop">@dimen/default_p</item>
        <item name="android:layout_marginBottom">@dimen/default_p</item>
    </style>

</resources>