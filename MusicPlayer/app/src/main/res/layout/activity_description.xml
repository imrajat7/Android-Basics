<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/default_p">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/default_p">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/small_music" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/song_name_in_descp"
        style="@style/SongNameDescp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_p"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artist_name_in_descp"
        style="@style/ArtistNameDescp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_p" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/now_playing"
            style="@style/SongNameDescp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/now_playing"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="@string/now_playing" />
    </RelativeLayout>
</LinearLayout>